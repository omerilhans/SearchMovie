<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="android.projects.Goster">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:paddingBottom="16dp"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Film Adı"
        android:id="@+id/ad"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:paddingBottom="16dp"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Film Yılı"
        android:id="@+id/yil"
        android:layout_below="@+id/ad"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignRight="@+id/ad"
        android:layout_alignEnd="@+id/ad" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:paddingBottom="16dp"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Film Turu"
        android:id="@+id/tur"
        android:layout_below="@+id/yil"
        android:layout_alignLeft="@+id/yil"
        android:layout_alignStart="@+id/yil"
        android:layout_alignRight="@+id/yil"
        android:layout_alignEnd="@+id/yil" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:paddingBottom="16dp"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Yönetmen"
        android:id="@+id/yonetmen"
        android:layout_below="@+id/tur"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignRight="@+id/tur"
        android:layout_alignEnd="@+id/tur" />
</RelativeLayout>
